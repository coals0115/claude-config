{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "opusplan",
  "statusLine": {
    "type": "command",
    "command": "uv run ~/.claude/status_lines/status_line.py",
    "padding": 0
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754040932328
  },
  "permissions": {
    "allow": [
      "Task",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(./gradlew ktlintFormat)",
      "Bash(./gradlew build)",
      "Bash(./gradlew test)",
      "Bash(./gradlew check)",
      "Bash(./gradlew ktlintCheck)",
      "Bash(./gradlew assemble)",
      "Bash(git log:*)",
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(ollama:*)",
      "Bash(source:*)",
      "Bash(which:*)",
      "Read(~/.zshrc)",
      "Grep",
      "List",
      "Read",
      "WebFetch",
      "WebSearch",
      "mcp__mcp-atlassian__jira_get_issue",
      "mcp__mcp-atlassian__jira_create_issue",
      "mcp__mcp-atlassian__jira_update_issue",
      "mcp__mcp-atlassian__jira_search",
      "mcp__mcp-atlassian__jira_transition_issue",
      "mcp__mcp-atlassian__jira_get_transitions"
    ],
    "deny": [
      "Bash(rm:*)",
      "Read(application.yml)",
      "Read(**/application.yml)"
    ],
    "defaultMode": "plan"
  },
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "60000"
  },
  "includeCoAuthoredBy": false
}