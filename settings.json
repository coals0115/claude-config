{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "opusplan",
  "statusLine": {
    "type": "command",
    "command": "uv run ~/.claude/status_lines/status_line.py",
    "padding": 0
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754040932328
  },
  "permissions": {
    "allow": [
      "Task",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(./gradlew:*)",
      "Bash(git log:*)",
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(ollama:*)",
      "Bash(source:*)",
      "Bash(which:*)",
      "Read(~/.zshrc)",
      "Grep",
      "List",
      "Read",
      "WebFetch",
      "WebSearch",
      "mcp__mcp-atlassian__jira_get_issue",
      "mcp__mcp-atlassian__jira_create_issue",
      "mcp__mcp-atlassian__jira_update_issue",
      "mcp__mcp-atlassian__jira_search",
      "mcp__mcp-atlassian__jira_transition_issue",
      "mcp__mcp-atlassian__jira_get_transitions",
      "mcp__sequentialthinking-tools__sequentialthinking_tools",
      "mcp__github__get_pull_request_reviews",
      "mcp__github__get_pull_request",
      "mcp__github__list_pull_requests",
      "mcp__github__get_issue",
      "mcp__github__list_issues",
      "mcp__github__get_repository",
      "mcp__github__list_commits",
      "mcp__github__create_pull_request",
      "mcp__github__update_pull_request",
      "mcp__github__create_issue",
      "mcp__github__update_issue",
      "mcp__github__create_issue_comment",
      "mcp__github__merge_pull_request",
      "mcp__github__close_pull_request",
      "mcp__github__request_review"
    ],
    "deny": [
      "Bash(rm:*)",
      "Read(application.yml)",
      "Read(**/application.yml)"
    ],
    "defaultMode": "plan"
  },
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "60000"
  },
  "includeCoAuthoredBy": false
}